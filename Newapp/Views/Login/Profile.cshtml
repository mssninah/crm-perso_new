@{
    Layout = null;
    var user = ViewBag.User as Newapp.Models.User;
    var countdownTime = ViewBag.CountdownTime ?? 30; // Default to 30 seconds if not set
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="~/css/profile.css" rel="stylesheet">
    <script>
        // Countdown using the countdown time from ViewBag
        var countdownTime = @countdownTime; // Getting the countdown time in seconds from ViewBag
        
        function updateCountdown() {
            if (countdownTime > 0) {
                countdownTime--;
                document.getElementById("countdownDisplay").textContent = countdownTime + " seconds remaining";
            } else {
                window.location.href = '/Home/Index';
            }
        }

        // Update countdown every second
        setInterval(updateCountdown, 1000);
    </script>
   
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">

    <div class="bg-white shadow-xl rounded-3xl p-10 w-full max-w-md transform transition-all duration-500 ease-in-out hover:scale-105 animate__animated animate__fadeIn">
        
        <h1 class="text-3xl font-semibold text-center text-blue-700 mb-6 flex items-center justify-center">
            Welcome, @user?.Username 
            <i class="fas fa-hand-wave text-blue-500 ml-2 waving-hand"></i>
        </h1>

        <div class="mb-6">
            <div class="input-icon">
                <i class="fas fa-envelope text-gray-500"></i>
                <label class="block text-gray-700 font-medium mb-2">Email</label>
                <p class="text-gray-600">@user?.Email</p>
            </div>
        </div>

        <div class="mb-6">
            <div class="input-icon">
                <i class="fas fa-user-circle text-gray-500"></i>
                <label class="block text-gray-700 font-medium mb-2">Status</label>
                <p class="text-gray-600">@user?.Status</p>
            </div>
        </div>

        <div class="mt-6 text-center text-gray-600">
            <p class="text-sm" id="countdownDisplay">10 seconds remaining</p>
        </div>
    </div>

</body>
</html>
