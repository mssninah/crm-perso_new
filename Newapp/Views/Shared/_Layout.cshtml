<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Newapp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Newapp.styles.css" asp-append-version="true" />
    <style>
        /* Styles pour la barre latérale */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background-color: #1e40af; /* Bleu roi par défaut */
            color: white;
            padding-top: 20px;
            transition: background-color 0.3s ease;
        }
        .sidebar .nav-link {
            color: white;
            margin: 10px 0;
        }
        .sidebar .nav-link:hover {
            background-color: #1e3a8a; /* Bleu foncé */
            border-radius: 5px;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    @if (!ViewData["HideNavbar"]?.Equals(true) ?? true)
    {
    <div class="sidebar" id="sidebar">
        <div class="px-3">
            <h4>CRM Perso</h4>
        </div>
        <nav class="nav flex-column px-3">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link" asp-area="" asp-controller="List" asp-action="Index">Details</a>
            <a class="nav-link" href="http://localhost:5228/Alert/ConfigureAlertRate">Config</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

        </nav>
        <div class="px-3 mt-4">
            <label for="sidebarColor" class="form-label">Choose Sidebar Color:</label>
            <input type="color" id="sidebarColor" class="form-control" value="#1e40af" />
        </div>
    </div>
    }

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Newapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Script pour changer la couleur de la barre latérale
        const sidebar = document.getElementById('sidebar');
        const colorPicker = document.getElementById('sidebarColor');

        colorPicker.addEventListener('input', function () {
            sidebar.style.backgroundColor = colorPicker.value;
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
