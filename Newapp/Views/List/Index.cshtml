@model Newapp.Models.DashboardViewModel

<div class="container mt-5">
    <h2>Customers</h2>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Position</td>
                
                </tr>
            }
        </tbody>
    </table>

    <h2>Tickets</h2>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td>@ticket.TicketId</td>
                    <td>@ticket.Subject</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.Status</td>
                    <td>@ticket.Priority</td>
                    <td>
                        <a href="#" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> <!-- Edit icon -->
                        </a>
                    </td>
                    <td>
                         <form action="@Url.Action("DeleteTickets", "List", new { id = ticket.TicketId })" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> <!-- Delete icon -->
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Leads</h2>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Status</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lead in Model.Leads)
            {
                <tr>
                    <td>@lead.LeadId</td>
                    <td>@lead.Name</td>
                    <td>@lead.Status</td>
                    <td>@lead.Phone</td>
                    <td>
                        <a href="#" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> <!-- Edit icon -->
                        </a>
                    </td>
                    <td>
                        <form action="@Url.Action("DeleteLead", "List", new { id = lead.LeadId })" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> <!-- Delete icon -->
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- Alternative CDN for FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}
