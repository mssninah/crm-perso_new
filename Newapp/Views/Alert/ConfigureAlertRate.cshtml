@{
    ViewData["Title"] = "Alert Rate Configuration";
}

<div class="container">
    <h2>Configurer le taux d'alerte</h2>
    <form method="post" asp-controller="Alert" asp-action="AddAlert">
        <div class="form-group">
            <label for="alertRate">Taux d'alerte (en %) :</label>
            <input type="number" class="form-control" id="alertRate" name="alertRate" min="0" max="100" placeholder="Entrez le taux d'alerte" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Sauvegarder</button>
    </form>
    <div id="alertMessage" class="mt-3" style="display: none;">
        @TempData["Message"]
    </div>
</div>
